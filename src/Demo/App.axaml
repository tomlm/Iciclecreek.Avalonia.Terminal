<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wm="clr-namespace:Iciclecreek.Avalonia.WindowManager;assembly=Iciclecreek.Avalonia.WindowManager"
		        xmlns:demo="clr-namespace:Demo.Views;assembly=Demo"
             x:Class="Demo.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
      <!--  <wm:WindowManagerTheme />-->
        <Styles>
          <Style Selector="demo|ManagedTerminalWindow">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="FontFamily" Value="fonts:CascadiaCode#Cascadia Code"/> 
            <Setter Property="FontSize" Value="14"/>  
          </Style >
        </Styles>
    </Application.Styles>
</Application>
